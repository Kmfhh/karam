<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="9dp"
        android:text="@string/temperature_20_c"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/tvMode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="13dp"
        android:text="@string/mode_off"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.42"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btnOnOff"
        android:layout_width="144dp"
        android:layout_height="140dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="42dp"
        android:layout_weight="1"
        android:text="@string/on_off"
        app:layout_constraintBottom_toTopOf="@+id/btnIncrease"
        app:layout_constraintEnd_toStartOf="@+id/btnMode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMode"
        tools:ignore="MissingConstraints,VisualLintBounds" />

    <Button
        android:id="@+id/btnMode"
        android:layout_width="165dp"
        android:layout_height="131dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="63dp"
        android:layout_weight="1"
        android:text="@string/mode"
        app:layout_constraintBottom_toTopOf="@+id/btnDecrease"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnOnOff"
        app:layout_constraintTop_toBottomOf="@+id/tvMode"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnIncrease"
        android:layout_width="151dp"
        android:layout_height="123dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="71dp"
        android:layout_marginBottom="289dp"
        android:layout_weight="1"
        android:text="@string/y"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnDecrease"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnOnOff"
        tools:ignore="MissingConstraints,VisualLintBounds" />

    <Button
        android:id="@+id/btnDecrease"
        android:layout_width="119dp"
        android:layout_height="119dp"
        android:layout_marginStart="71dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="288dp"
        android:layout_weight="1"
        android:text="@string/x"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnIncrease"
        app:layout_constraintTop_toBottomOf="@+id/btnMode"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>
